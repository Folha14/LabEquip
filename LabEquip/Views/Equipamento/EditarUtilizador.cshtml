@using LabEquip.Models;
@model Utilizador;
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/css/labequip.css" />
    <title>Editar Utilizador</title>
</head>
<body>
    <h1>Editar Utilizador</h1>

    <div class="links">
        <p>🏠 <a href="/Equipamento/GestaoUtilizadores">Voltar à Lista</a></p>
    </div>

    <form method="post" action="/Equipamento/EditarUtilizador">
        <input type="hidden" name="id" value="@Model.GuidUtilizador" />
        <table>
            <tr>
                <td><label>Nome:</label></td>
                <td><input type="text" name="nome" value="@Model.Nome" required /></td>
            </tr>
            <tr>
                <td><label>Email:</label></td>
                <td><input type="email" name="email" value="@Model.Email" required /></td>
            </tr>
            <tr>
                <td><label>Nível de Acesso:</label></td>
                <td>
                    <select name="nivelAcesso">
                        <option value="0" @(Model.NivelAcesso == 0 ? "selected" : "")>Visitante</option>
                        <option value="1" @(Model.NivelAcesso == 1 ? "selected" : "")>Utilizador</option>
                        <option value="2" @(Model.NivelAcesso == 2 ? "selected" : "")>Administrador</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td><label>Estado:</label></td>
                <td>
                    <select name="ativo">
                        <option value="true" @(Model.Ativo ? "selected" : "")>Ativo</option>
                        <option value="false" @(!Model.Ativo ? "selected" : "")>Inativo</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <button type="submit">Atualizar</button>
                </td>
            </tr>
        </table>
    </form>
</body>
</html>