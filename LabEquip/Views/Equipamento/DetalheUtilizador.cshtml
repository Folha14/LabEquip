@using LabEquip.Models;
@model Utilizador;
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/css/labequip.css" />
    <title>Detalhe do Utilizador</title>
</head>
<body>
    <h1>Detalhe do Utilizador</h1>

    <div class="links">
        <p>🏠 <a href="/Equipamento/GestaoUtilizadores">Voltar à Lista</a></p>
    </div>

    <table>
        <tr>
            <td><strong>Guid:</strong></td>
            <td>@Model.GuidUtilizador</td>
        </tr>
        <tr>
            <td><strong>Nome:</strong></td>
            <td>@Model.Nome</td>
        </tr>
        <tr>
            <td><strong>Email:</strong></td>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <td><strong>Nível de Acesso:</strong></td>
            <td>
                @(Model.NivelAcesso == 0 ? "Visitante" :
                    Model.NivelAcesso == 1 ? "Utilizador" : "Administrador")
            </td>
        </tr>
        <tr>
            <td><strong>Estado:</strong></td>
            <td>@(Model.Ativo ? "Ativo" : "Inativo")</td>
        </tr>
        <tr>
            <td><strong>Data de Criação:</strong></td>
            <td>@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")</td>
        </tr>
    </table>

    <div class="acoes">
        <a href="/Equipamento/EditarUtilizador/@Model.GuidUtilizador">Editar</a>
        @if (Model.Ativo)
        {
            @: | <a href="/Equipamento/DesativarUtilizador/@Model.GuidUtilizador">Desativar</a>
        }
        else
        {
            @: | <a href="/Equipamento/AtivarUtilizador/@Model.GuidUtilizador">Ativar</a>
        }
    </div>
</body>
</html>